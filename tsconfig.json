  {
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "es2017",
        "dom"
      ],
      "experimentalDecorators": true,
      "declaration": true,
      "declarationDir": "dist",
      "baseUrl": "./packages",
      "paths": {
        "@tetragius/raxy": [
          "raxy/index.ts"
        ],
        "@tetragius/raxy-react": [
          "raxy-react/index.ts"
        ],
        "@tetragius/raxy-vue": [
          "raxy-vue/index.ts"
        ],
      },
    },
    "include": [
      "packages/raxy/**/*",
      "packages/raxy-react/**/*",
      "packages/raxy-vue/**/*", 
      "cypress/spec"],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
  }